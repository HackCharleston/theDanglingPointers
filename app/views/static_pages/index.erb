<div class="row-fluid">
  <div class="span12">

      <!--Sidebar content-->
    <% if user_signed_in? %>
    <style>
    body { margin:0; padding:0; }
  #map { position:absolute; top:100px; bottom:0; width:100%; }
      #map-ui {
    position: absolute;
    top: 175px;
    left: 0;
    list-style: none;
    margin: 0;
    padding: 0;
    z-index: 100;
}

#map-ui a {
    font: normal 13px/18px 'Helvetica Neue', Helvetica, sans-serif;
    background: #FFF;
    color: #3C4E5A;
    display: block;
    margin: 0;
    padding: 0;
    border: 1px solid #BBB;
    border-bottom-width: 0;
    min-width: 138px;
    padding: 10px;
    text-decoration: none;
}

#map-ui a:hover {
    background: #ECF5FA;
}

#map-ui li:last-child a {
    border-bottom-width: 1px;
    -webkit-border-radius: 0 0 3px 3px;
    border-radius: 0 0 3px 3px;
}

#map-ui li:first-child a {
    -webkit-border-radius: 3px 3px 0 0;
    border-radius: 3px 3px 0 0;
}

#map-ui a.active {
    background: #3887BE;
    border-color: #3887BE;
    border-top-color: #FFF;
    color: #FFF;
}
    </style>

<link href='https://api.tiles.mapbox.com/mapbox.js/v1.6.2/mapbox.css' rel='stylesheet' />
 <ul id="map-ui">
        <li><a href='#' id='geolocate'>Find me</a></li>
    </ul>
    <div id="map"></div>



 <script src='https://api.tiles.mapbox.com/mapbox.js/v1.6.2/mapbox.js'></script>
    <% else %>

          <a href="/users/sign_in" class='btn btn-success btn-large btn-block'>Sign In</a>
          <a href="/users/sign_up" class='btn btn-info btn-large btn-block'>Sign Up</a>

    <% end %>

  </div>
</div>
